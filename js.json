{
  "extends": [
    "github>finn-no/renovate-presets:base",
    "group:linters",
    "group:postcss"
  ],
  "packageRules": [{
    "depTypeList": ["dependencies"],
    "automerge": true,
    "major": {
      "automerge": false
    }
  },
  {
    "depTypeList": ["devDependencies"],
    "schedule": ["before 4am on sunday"],
    "commitMessage": "Dev dependency {{depName}} updated to version {{newValue}}",
    "prTitle": "Dev dependency update: {{depName}}",
    "automerge": true,
    "major": {
      "automerge": false
    }
  }]
}
