{
  "extends": [
    "github>finn-no/renovate-presets:base",
    "group:linters",
    "group:postcss"
  ],
  "rangeStrategy": "replace",
  "packageRules": [
    {
      "groupName": "typescript packages",
      "packageNames": ["typescript", "type-fest"],
      "packagePatterns": ["^@types/"]
    },
    {
      "groupName": "reach packages",
      "packagePatterns": ["^@reach/"]
    },
    {
      "groupName": "webpack packages",
      "packagePatterns": ["^webpack", "-webpack-plugin$"],
      "packageNames": [
        "babel-loader", 
        "css-loader", 
        "file-loader",
        "mini-css-extract-plugin",
        "postcss-loader",
        "raw-loader",
        "sass-loader",
        "style-loader",
        "url-loader",
        "vue-loader"
      ]
    },
    {
      "groupName": "podium packages",
      "packagePatterns": ["^@podium/"]
    },
    {"groupName": "troika packages", "packagePatterns": ["^@finn-no/troika-"]}
  ]
}
