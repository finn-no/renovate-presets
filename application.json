{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "dependencyDashboard": true,
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": "before 6pm every sunday",
    "automerge": true
  },
  "packageRules": [
    {
      "groupName": "Dev Dependencies",
      "matchDepTypes": ["devDependencies"],
      "minimumReleaseAge": "1 day",
      "excludePackagePrefixes": [
        "@finn-no",
        "@podium",
        "@eik",
        "@fabric-ds",
        "@metrics",
        "@warp-ds",
        "@m10s",
        "@schibsted-nmp",
        "@borealis"
      ],
      "schedule": ["before 6am on the first day of the month"],
      "rangeStrategy": "pin",
      "automerge": true
    },
    {
      "groupName": "External Dependencies",
      "matchDepTypes": ["dependencies"],
      "minimumReleaseAge": "1 day",
      "excludePackagePrefixes": [
        "@finn-no",
        "@podium",
        "@eik",
        "@fabric-ds",
        "@metrics",
        "@warp-ds",
        "@m10s",
        "@schibsted-nmp",
        "@borealis"
      ],
      "schedule": ["after 6pm on sunday"],
      "rangeStrategy": "pin",
      "automerge": true,
      "major": {
        "automerge": false
      }
    },
    {
      "groupName": "Internal Dependencies",
      "schedule": [
        "after 6pm every weekday",
        "before 6am every weekday",
        "after 6pm on sunday"
      ],
      "matchPackagePrefixes": [
        "@finn-no",
        "@podium",
        "@eik",
        "@fabric-ds",
        "@metrics",
        "@warp-ds",
        "@m10s",
        "@schibsted-nmp",
        "@borealis"
      ],
      "rangeStrategy": "pin",
      "automerge": true,
      "major": {
        "automerge": false
      }
    },
    {
      "groupName": "Default version catalog dependencies",
      "minimumReleaseAge": "1 day",
      "matchDepTypes": ["pnpm.catalog.default"],
      "schedule": ["after 6pm on sunday"],
      "rangeStrategy": "pin",
      "automerge": true,
      "major": {
        "automerge": false
      }
    }
  ]
}
