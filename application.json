{
  "dependencyDashboard": true,
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": "before 6am every saturday",
    "automerge": true
  },
  "packageRules": [
    {
      "groupName": "Dev Dependencies",
      "depTypeList": ["devDependencies"],
      "schedule": ["before 6am on the first day of the month"],
      "rangeStrategy": "pin",
      "automerge": true
    },
    {
      "groupName": "Internal Dependencies",
      "depTypeList": ["dependencies"],
      "schedule": ["before 6am every weekday"],
      "packagePatterns": [
        "^@finn-no/",
        "^@podium/",
        "^@eik/",
        "^@fabric-ds/",
        "^@metrics/"
      ],
      "rangeStrategy": "pin",
      "automerge": true,
      "major": {
        "automerge": false
      }
    },
    {
      "groupName": "External Dependencies",
      "depTypeList": ["dependencies"],
      "schedule": ["before 6am every sunday"],
      "rangeStrategy": "pin",
      "automerge": true,
      "major": {
        "automerge": false
      }
    }
  ]
}
