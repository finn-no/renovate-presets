{
  "dependencyDashboard": true,
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": "before 6am every saturday",
    "automerge": true
  },
  "packageRules": [
    {
      "groupName": "Dev Dependencies",
      "matchDepTypes": ["devDependencies"],
      "excludePackagePrefixes": ["@finn-no", "@podium", "@eik", "@fabric-ds", "@metrics"],
      "schedule": ["before 6am on the first day of the month"],
      "rangeStrategy": "pin",
      "automerge": true
    },
    {
      "groupName": "External Dependencies",
      "matchDepTypes": ["dependencies"],
      "excludePackagePrefixes": ["@finn-no", "@podium", "@eik", "@fabric-ds", "@metrics"],
      "schedule": ["before 6am every sunday"],
      "rangeStrategy": "pin",
      "automerge": true,
      "major": {
        "automerge": false
      }
    },
    {
      "groupName": "Internal Dependencies",
      "schedule": ["before 6am every weekday"],
      "matchPackagePrefixes": ["@finn-no", "@podium", "@eik", "@fabric-ds", "@metrics"],
      "rangeStrategy": "pin",
      "automerge": true,
      "major": {
        "automerge": false
      }
    }
  ]
}
